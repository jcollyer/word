<script type="text/x-handlebars" id="biblebooks">
  <div class="row">
    <div class="small-6 large-3 columns">
      <table class='table'>
        <thead>
          <tr><th>Recent Posts</th></tr>
        </thead>
        {{#each model}}
        <tr><td>
          {{#link-to 'biblebook' this}}{{title}} <small class='muted'>by {{author.name}}</small>{{/link-to}}
        </td></tr>
        {{/each}}
      </table>
    </div>
    <div class="small-6 large-9 columns">
      {{outlet}}
    </div>
  </div>
</script>

<script type="text/x-handlebars" id="biblebook">
  {{#if isEditing}}
    {{partial 'biblebook/edit'}}
    <button {{action 'doneEditing'}}>Done</button>
  {{else}}
    <button {{action 'edit'}}>Edit</button>
  {{/if}}

  <h1>{{title}}</h1>
  <h2>by {{author.name}} <small class='muted'></small></h2>

  <hr>
  <h2>{{format-date date}}</h2>
  <h4>{{format-markdown excerpt}}</h4>
  <p>{{format-markdown body}}</p>
</script>

 <script type="text/x-handlebars" id="biblebook/_edit">
  <p>{{input type="text" value=title}}</p>
  <p>{{input type="text" value=excerpt}}</p>
  <p>{{textarea value=body}}</p>
</script>
